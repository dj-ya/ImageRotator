<Window x:Class="ImageRotator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageRotator"
        mc:Ignorable="d"
        Title="Приложения для ротации фотографий" Height="350" Width="525" ResizeMode="CanMinimize">
    <Grid>
        <Button x:Name="button" Content="Выберите папку с изображениями" HorizontalAlignment="Left" Margin="19,18,0,0" VerticalAlignment="Top" Width="212" Click="showOpenFolderDialog"/>
        <TextBox x:Name="RotateResult" HorizontalAlignment="Left" Height="216" Margin="19,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="468" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"/>
        <Label x:Name="label" Content="Ход работы программы:" HorizontalAlignment="Left" Margin="19,60,0,0" VerticalAlignment="Top" Width="142" />
        

    </Grid>
</Window>
